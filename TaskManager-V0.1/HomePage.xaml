<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager_V0._1.HomePage"
             Title="Task Manager"
             BackgroundColor="#2A3759">

    
    <StackLayout>


        <StackLayout>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnMainAreaTapped"/>
            </StackLayout.GestureRecognizers>

            <!-- Main content goes here -->
            <Label Text="Main Content Area" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   FontSize="24"/>
        </StackLayout>

        <!-- Side menu -->
        <Button x:Name="HamburgerButton" Margin="5, 20, 0, 0" Text="â˜°" Clicked="OnHamburgerMenuClicked" 
                BackgroundColor="#007AFF" HeightRequest="50" WidthRequest="50" 
                HorizontalOptions="Start" VerticalOptions="Start" 
                CornerRadius="25" TextColor="White"/>

        <!-- Side menu layout -->
        <StackLayout x:Name="OnHamburger" IsVisible="False" Spacing="15" 
                     BackgroundColor="#FFFFFF" Padding="10" 
                     HorizontalOptions="Start" VerticalOptions="Fill"
                     >
            <Label Text="Menu" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Button Text="Home" BackgroundColor="#F0F0F0" TextColor="#333"/>
            <Button Text="Profile" BackgroundColor="#F0F0F0" TextColor="#333"/>
            <Button Text="Settings" BackgroundColor="#F0F0F0" TextColor="#333"/>
            <Button Text="Help" BackgroundColor="#F0F0F0" TextColor="#333"/>
            <Button Text="Logout" BackgroundColor="#F0F0F0" TextColor="#333"/>
        </StackLayout>


        <Label
            Text="Home"
            TextColor="#FFFFFF"
            FontSize="48"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0, 100, 0, 80"/>

        <Button
            Text="People"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 0"
            Clicked="peopleButton"/>
        
        <Button
            Text="Domain"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 0"
            Clicked="domainButton"/>
        
        <Button
            Text="Task"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 20"
            Clicked="taskButton"/>
    </StackLayout>
</ContentPage>
