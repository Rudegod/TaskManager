<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager_V0._1.HomePage"
             Title="Task Manager"
             BackgroundColor="#2A3759">

    <Grid>

        
        <StackLayout>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnMainAreaTapped" />
            </StackLayout.GestureRecognizers>

            <!-- Side menu -->
            <Button
                x:Name="HamburgerButton"
                Margin="5, 0, 0, 0"
                Text="â˜°"
                FontAttributes="Bold"
                Clicked="OnHamburgerMenuClicked" 
                BackgroundColor="#2A3759"
                HeightRequest="50"
                WidthRequest="50" 
                HorizontalOptions="Start"
                VerticalOptions="Start" 
                CornerRadius="25"
                TextColor="White"
                    />

            <Label
            Text="Home"
            TextColor="#FFFFFF"
            FontSize="48"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Margin="0, 70, 0, 80"/>

            <Button
            Text="People"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 0"
            Clicked="peopleButton"/>

            <Button
            Text="Domain"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 0"
            Clicked="domainButton"/>

            <Button
            Text="Task"
            BackgroundColor="#B7CB99"
            TextColor="#000000"
            FontSize="35"
            FontAttributes="Bold"
            CornerRadius="171"
            WidthRequest="358"
            HeightRequest="70"
            Margin="0, 30, 0, 20"
            Clicked="taskButton"/>
        </StackLayout>
        
        <StackLayout
            x:Name="OnHamburger"
            IsVisible="False"
            Spacing="20" 
            BackgroundColor="#778FD2"
            Padding="10" 
            HorizontalOptions="Start"
            VerticalOptions="Fill"
            WidthRequest="200"
            >

            <Label Text="Menu" TextColor="#431D32" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Button Text="Home" BackgroundColor="#B7CB99" TextColor="#333"/>
            <Button Text="Profile" BackgroundColor="#B7CB99" TextColor="#333" Clicked="ProfileButton"/>
            <Button Text="Settings" BackgroundColor="#B7CB99" TextColor="#333"/>
            <Button Text="Help" BackgroundColor="#B7CB99" TextColor="#333"/>
            <Button Text="Logout" BackgroundColor="#B7CB99" TextColor="#333"/>
        </StackLayout>
    </Grid>
</ContentPage>
