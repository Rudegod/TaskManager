<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager_V0._1.GroupPage"
             Title="GroupPage"
             BackgroundColor="#778FD2">

    <VerticalStackLayout Background="#778FD2" Padding="20" >
        <Button
            CornerRadius="30"
            Margin="45, 13, 0, 0"
            VerticalOptions="Start"
            HorizontalOptions="Start"
            Text="Add group"
            BackgroundColor="#B7CB99"
            TextColor="Black"
            Clicked="AddButton"
            >
        </Button>
        
        <Label Text="Groups List" />
        <ListView x:Name="GroupsListView" Background="#778FD2">
            <!-- Define item template for groups -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding GroupName}" Detail="{Binding Description}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>