<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TaskManager_V0._1.viewmodel"
             x:Class="TaskManager_V0._1.AddUserPage"
             Title="Add User Page"
             BackgroundColor="#2A3759">
    <ContentPage.BindingContext>
        <local:UsersViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Padding="20">
        <Label Text="Name:"/>
        <Entry x:Name="NameEntry" Placeholder="Enter user name" Text="{Binding Name, Mode=TwoWay}"/>

        <Label Text="Password:" Margin="0,20,0,0"/>
        <Entry x:Name="PasswordEntry" Margin="0 , 0 , 0 , 10 " Placeholder="Enter Password" IsPassword="True" Text="{Binding Password, Mode=TwoWay}"/>

        <Label Text="Phone Number:" Margin="0,20,0,0"/>
        <Entry x:Name="PhoneNumberEntry" Margin="0 , 0 , 0 , 10" Placeholder="Enter Phone Number" Text="{Binding PhoneNumber, Mode=TwoWay}"/>

        
        <Picker
        Margin="0 , 10 , 0 , 0 "
        Title="select Job Position"
        />
        <Picker
        Margin="0 , 15 , 0 , 50 "
        Title="select Group"
        />

        <Button Text="AddUser" Command="{Binding AddUserCommand}"/>
    </VerticalStackLayout>
</ContentPage>