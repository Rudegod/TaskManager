                WidthRequest="305"
                HeightRequest="70"
                >
            </Button>

            <Button
                Text="Task N #7"
                Margin="45, 25, 45, 5"
                Clicked="Task7"
                TextColor="White"
                BackgroundColor="#778fd2"
                WidthRequest="305"
                HeightRequest="70"
                >
            </Button>

            <Button
                Text="Task N #8"
                Margin="45, 25, 45, 5"
                Clicked="Task8"
                TextColor="White"
                BackgroundColor="#778fd2"
                WidthRequest="305"
                HeightRequest="70"
                >
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>