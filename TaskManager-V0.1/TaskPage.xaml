<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager_V0._1.TaskPage"
             Title="TaskPage"
             Background="#778fd2">

    <ScrollView>
        <VerticalStackLayout Background="#2A3759">
            <Button
                Margin="45, 8, 0, 0"
                VerticalOptions="Start"
                HorizontalOptions="StartAndExpand"
                Text="Add Task"
                TextColor="Black"
                BackgroundColor="#B7CB99"
                Clicked="AddTask"
                >
            </Button>

            <Button
                Text="Task N #1"
                Margin="45, 25, 45, 5"
                Clicked="Task1"
                TextColor="White"
                BackgroundColor="#778fd2"
                WidthRequest="305"
                HeightRequest="70"
                >
            </Button>

            <Button
                Text="Task N #2"
                Margin="45, 25, 45, 5"
                Clicked="Task2"
